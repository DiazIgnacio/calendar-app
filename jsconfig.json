{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "baseUrl": ".",
    "paths": {
      "components/*": ["./src/components/*"],
      "context/*": ["./src/context/*"],
      "assets/*": ["./src/assets/*"]
    }
  },
  "exclude": ["node_modules", ".next"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js",
    "./src/**/*.jsx"
  ]
}
